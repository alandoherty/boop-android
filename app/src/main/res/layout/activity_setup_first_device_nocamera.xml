<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="12dip"
    android:background="@color/white"
    android:elevation="10dp"
    android:scrollbars="vertical">
    <TextView
        android:id="@+id/noCameraTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:text="No camera?"
        android:textColor="@color/blue"
        android:textSize="28dip"/>
    <TextView
        android:id="@+id/noCameraDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="Click the 'no camera' option on your other app, then enter the phrase below."
        android:layout_below="@id/noCameraTitle"
        android:layout_marginTop="12dip"
        />
    <TextView
        android:id="@+id/noCameraKeyword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:text="correct horse battery staple"
        android:layout_below="@id/noCameraDescription"
        android:layout_marginTop="6dip"
        android:textColor="@color/darkBlue"
        android:gravity="center"
        android:textSize="36dip"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/qr_scan_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/noCameraKeyword"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_marginTop="16dip"
        android:text="I changed my mind"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:onClick="removePopup"/>
</RelativeLayout>